<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backcolor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/bipm"
        android:id="@+id/logo"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@+id/logo"
        android:layout_marginTop="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="ketik username"
        android:background="@drawable/username"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="ketik password"
        android:inputType="textPassword"
        android:background="@drawable/password"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Masuk"
        android:textColor="#ffff"
        android:background="@drawable/login"
        android:backgroundTint="@color/colorAccent"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selamatdatang1"
        android:text="Selamat Datang"
        android:textSize="55px"
        android:layout_below="@id/logo"
        android:textColor="#ff3366ff"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selamatdatang2"
        android:text="Di BIP Mobile Banking"
        android:textSize="55px"
        android:layout_below="@id/logo"
        android:textColor="#ff3366ff"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textregister"
        android:textColor="#000000"
        android:text="Lupa Password ?"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:id="@+id/textdaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="#ff0000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"/>
    </RelativeLayout>

</RelativeLayout>